    hr/
  ul.breadcrumb
    li 
      a(href="/soc") List of SOC
    span.divider
    if (typeof(soc) != 'undefined')
      li.active Edit SOC
    else
      li.active New SOC
  div#post_form
    span.bold
      
      - if (typeof(soc) != 'undefined')
        label Modified Date
          p #{soc.modified}
        label Modified By
          p #{soc.modifiedBy.name}
        label Created Date
          p #{soc.created}
        label Created By
          p #{soc.createdBy.name}
            //td 
              //a(href="#", id="delete_"+soc._id) delete
        form#soc_form_update
          input(name="id", value=soc._id, type="hidden")
          label(for="title") Title
          input(type="text", name="title", value=soc.title)
          br/
          input(type="submit", value="Save")
      - else
        form#soc_form
          label(for="title") Title
          input(type="text", name="title")
          br/
          input(type="submit", value="Save")
        
        
