!!!
html(lang="en")
  head
    title #{title}
    link(rel='stylesheet', href='/stylesheets/reset.css')
    link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/global.css')
    link(rel='stylesheet', href='/stylesheets/datepicker.css')
    script(type='text/javascript', src='/javascript/jquery.min.js')
    script(type='text/javascript', src='/javascript/jquery.dataTables.min.js')
    script(src='/lib/bootstrap/js/bootstrap.min.js')
    script(src='/javascript/bootstrap-datepicker.js')
    block head

  - if (settings.env == "development" || everyauth.loggedIn)
      div(class='navbar navbar-inverse')
        div.navbar-inner
          div.container
            ul(class='nav')
              li
                a(href='/') Home
              li
                a(href='/soc') SOC
              li(class="dropdown")
                a(href='#',data-toggle="dropdown",class="dropdown-toggle",data-target="#",id="dLabel")  Visualizations
                ul(class="dropdown-menu",role="menu",aria-labelledby="dLabel")
                  li
                    a(role="menuitem",tabindex="-1",href='/iranvisualization') Iran
                  li
                    a(role="menuitem",tabindex="-1",href='/burmavisualization') Burma
              li
                a(href='/logout') Logout
            ul(class='nav pull-right')
              li
                button(class='btn btn-info', onclick="window.open('http://wiki.thesentinelproject.org/index.php/Threatwiki_User_Guide');", target='_blank') User Guide
      div.container-fluid
        #logo
          img(src='/images/logo.png',style="height: 44px; width:300px;")
        body
          block pageContent
    else
      div(class='navbar navbar-inverse')
        div.navbar-inner
          div.container
            ul(class='nav')
                li
                  a(href='/') Home
      div.container-fluid
        #logo
          img(src='/images/logo.png',style="height: 44px; width:300px;")
        body
          block pageContent
