#pageContent

  a(href='soc/create',class='primaryButton',style="color:#fff") New SOC

  table(class='table table-striped table-bordered')#soc.display
    thead
      tr
        th Situation of Concern
        th Last Modified Date
        th Last Modified by User
        //
          th created
          th by
          th actions
    tbody
     each soc, i in socs
        tr(id="row_"+soc._id)
          td
            a(href="/soc/view?soc="+soc.title) #{soc.title}
          td
            span #{soc.modified}
          td
            span #{soc.modifiedBy.name}
          //         
            td
              span #{soc.created}
            td
              span #{soc.createdBy.name}
            td 
              a(href="#", id="delete_"+soc._id) delete

